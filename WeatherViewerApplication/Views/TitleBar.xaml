<UserControl x:Class="WeatherViewerApplication.Views.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeatherViewerApplication.Views"
             xmlns:properties="clr-namespace:WeatherViewerApplication.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="600">
    <Grid Background="{StaticResource SolidBackgroundColour}">
        <DockPanel >
            <Label FontSize ="55" HorizontalAlignment="Left" Foreground="White" Margin="20,10" Content="Mark Ashfield"/>
            <Label FontSize ="55" HorizontalAlignment="Right" Foreground="White" Margin="20,10" Content="App" />
        </DockPanel>
    </Grid>
</UserControl>
